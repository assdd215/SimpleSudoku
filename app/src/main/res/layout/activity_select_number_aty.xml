<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_number_aty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainView_Back"
    tools:context="com.example.aria.sudokuweb.activity.SelectNumberAty">

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/number_title"
        android:text="选 择 数 字"
        android:textSize="50dp"
        android:textColor="@color/WHITE"
        android:gravity="center"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_gridLayout"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:columnCount="3">
        <Button
        android:layout_width="@dimen/NUMBER_BTN_SIZE"
        android:layout_height="@dimen/NUMBER_BTN_SIZE"
        android:text="1"
        android:textSize="@dimen/NUMBER_BTN_TEXT_SIZE"
        android:layout_margin="0dp"
        android:background="@drawable/btn_frame"
        android:textColor="@color/WHITE"
        android:id="@+id/number_btn1"
        android:gravity="center"/>
        <Button
            android:layout_width="@dimen/NUMBER_BTN_SIZE"
            android:layout_height="@dimen/NUMBER_BTN_SIZE"
            android:layout_margin="0dp"
            android:background="@drawable/btn_frame"
            android:id="@+id/number_btn2"
            android:text="2"
            android:textSize="@dimen/NUMBER_BTN_TEXT_SIZE"
            android:textColor="@color/WHITE"
            android:gravity="center"/>
        <Button
            android:layout_width="@dimen/NUMBER_BTN_SIZE"
            android:layout_height="@dimen/NUMBER_BTN_SIZE"
            android:layout_margin="0dp"
            android:background="@drawable/btn_frame"
            android:id="@+id/number_btn3"
            android:text="3"
            android:textSize="@dimen/NUMBER_BTN_TEXT_SIZE"
            android:textColor="@color/WHITE"
            android:gravity="center"/>
        <Button
            android:layout_width="@dimen/NUMBER_BTN_SIZE"
            android:layout_height="@dimen/NUMBER_BTN_SIZE"
            android:text="4"
            android:textSize="@dimen/NUMBER_BTN_TEXT_SIZE"
            android:layout_margin="0dp"
            android:background="@drawable/btn_frame"
            android:textColor="@color/WHITE"
            android:id="@+id/number_btn4"
            android:gravity="center"/>
        <Button
            android:layout_width="@dimen/NUMBER_BTN_SIZE"
            android:layout_height="@dimen/NUMBER_BTN_SIZE"
            android:layout_margin="0dp"
            android:background="@drawable/btn_frame"
            android:id="@+id/number_btn5"
            android:text="5"
            android:textSize="@dimen/NUMBER_BTN_TEXT_SIZE"
            android:textColor="@color/WHITE"
            android:gravity="center"/>
        <Button
            android:layout_width="@dimen/NUMBER_BTN_SIZE"
            android:layout_height="@dimen/NUMBER_BTN_SIZE"
            android:layout_margin="0dp"
            android:background="@drawable/btn_frame"
            android:id="@+id/number_btn6"
            android:text="6"
            android:textSize="@dimen/NUMBER_BTN_TEXT_SIZE"
            android:textColor="@color/WHITE"
            android:gravity="center"/>
        <Button
            android:layout_width="@dimen/NUMBER_BTN_SIZE"
            android:layout_height="@dimen/NUMBER_BTN_SIZE"
            android:text="7"
            android:textSize="@dimen/NUMBER_BTN_TEXT_SIZE"
            android:layout_margin="0dp"
            android:background="@drawable/btn_frame"
            android:textColor="@color/WHITE"
            android:id="@+id/number_btn7"
            android:gravity="center"/>
        <Button
            android:layout_width="@dimen/NUMBER_BTN_SIZE"
            android:layout_height="@dimen/NUMBER_BTN_SIZE"
            android:layout_margin="0dp"
            android:background="@drawable/btn_frame"
            android:id="@+id/number_btn8"
            android:text="8"
            android:textSize="@dimen/NUMBER_BTN_TEXT_SIZE"
            android:textColor="@color/WHITE"
            android:gravity="center"/>
        <Button
            android:layout_width="@dimen/NUMBER_BTN_SIZE"
            android:layout_height="@dimen/NUMBER_BTN_SIZE"
            android:layout_margin="0dp"
            android:background="@drawable/btn_frame"
            android:id="@+id/number_btn9"
            android:text="9"
            android:textSize="@dimen/NUMBER_BTN_TEXT_SIZE"
            android:textColor="@color/WHITE"
            android:gravity="center"/>
    </GridLayout>

</RelativeLayout>
